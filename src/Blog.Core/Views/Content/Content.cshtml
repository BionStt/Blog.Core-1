@inject Microsoft.Extensions.Options.IOptionsMonitor<SiteSettings> SiteSettings;
@using Blog.Core.Domain.Settings
@model Blog.Core.Models.Services.IBlogModel
@{
    Layout = "_Layout";
}

<html>
<head>
</head>

<body>
<div class="container">
    <h2>Content</h2>
    <ul>
        @{
            foreach (var blogPost in Model.Posts)
            {
                <a asp-controller="Home" asp-action="SinglePostPage" asp-route-postName="@blogPost.Filename">
                    <li>@blogPost.Title</li>
                </a>
            }
        }
    </ul>
</div>
</body>
</html>