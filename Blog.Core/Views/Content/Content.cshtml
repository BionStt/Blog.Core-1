@inject Microsoft.Extensions.Options.IOptionsMonitor<SiteSettings> SiteSettings;
@model Blog.Core.Models.Contexts.PageContext
@{
    ViewData["Title"] = $"Content of {SiteSettings.CurrentValue.Author}";
    ViewData["Description"] = SiteSettings.CurrentValue.Description;
    ViewBag.PageId = "about";
    Layout = "_Layout";
}

<html>
<head>
    <title>@ViewData["Title"]</title>
</head>

<body>

<div class="container">
    <h2>List of Posts</h2>
    @foreach (var post in Model.Blog.Posts)
    {
        <div class="blog-post-list-item">
            @Html.Raw(post.Filename)
        </div>
    }
</div>

</body>
</html>